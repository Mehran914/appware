<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    
    
    
    <RelativeLayout 
    android:id="@+id/footer"
    android:layout_width="match_parent" 
    android:layout_height="40dp" 
    android:weightSum="4" 
    android:background="#70DCDC"
    android:layout_alignParentBottom="true">
     
    
    </RelativeLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/footer"
        android:layout_alignParentTop="true" >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="418dp"
    android:orientation="vertical"
    android:padding="10dp" >
    
    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1.00"
            android:src="@drawable/ic_launcher" 
            android:layout_gravity="center"/>
     <View
  		android:layout_width="match_parent"
  		android:layout_height="10dp"/>

    <EditText
        android:id="@+id/etFirstName"
        android:layout_width="200dp"
        android:text="Firstname"
        android:layout_marginBottom="10dp"
        android:fontFamily="Aparajita"
        android:textColor="#808080"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:drawableRight="@drawable/u_icon"
        android:drawablePadding="2dip"
    	android:paddingLeft="10dip"
    	android:paddingRight="10dip"
    	android:singleLine="true"
        android:background="@drawable/text_view_border"
        android:layout_gravity="center"
        android:onClick="clear"/>
    
    <EditText
        android:id="@+id/etLastName"
        android:layout_width="200dp"
        android:text="Lastname"
        android:layout_marginBottom="10dp"
        android:fontFamily="Aparajita"
        android:textColor="#808080"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:drawableRight="@drawable/u_icon"
        android:drawablePadding="2dip"
    	android:paddingLeft="10dip"
    	android:paddingRight="10dip"
    	android:singleLine="true"
        android:background="@drawable/text_view_border"
        android:layout_gravity="center"
        android:onClick="clear"/>
    
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_view_border"
        android:drawablePadding="2dip"
        android:drawableRight="@drawable/e_icon"
        android:fontFamily="Aparajita"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:singleLine="true"
        android:text="Email"
        android:textColor="#808080"
        android:textSize="15dp" 
        android:onClick="clear"/>
    
    <EditText
        android:id="@+id/etAddress"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_view_border"
        android:drawablePadding="2dip"
        android:drawableRight="@drawable/u_icon"
        android:fontFamily="Aparajita"
        android:inputType="textMultiLine"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:singleLine="true"
        android:text="Address"
        android:textColor="#808080"
        android:textSize="15dp" 
        android:onClick="clear"/>
    
    <EditText
        android:id="@+id/etPhoneNumber"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_view_border"
        android:drawablePadding="2dip"
        android:drawableRight="@drawable/m_icon"
        android:fontFamily="Aparajita"
        android:inputType="phone"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:singleLine="true"
        android:text="PhoneNumber"
        android:textColor="#808080"
        android:textSize="15dp" 
        android:onClick="clear"/>
    
    <EditText
        android:id="@+id/etUsername"
        android:layout_width="200dp"
        android:text="Username"
        android:layout_marginBottom="10dp"
        android:fontFamily="Aparajita"
        android:textColor="#808080"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:drawableRight="@drawable/u_icon"
        android:drawablePadding="2dip"
    	android:paddingLeft="10dip"
    	android:paddingRight="10dip"
    	android:singleLine="true"
        android:background="@drawable/text_view_border"
        android:layout_gravity="center"
        android:onClick="clear"/>
    
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_view_border"
        android:drawablePadding="2dip"
        android:drawableRight="@drawable/p_icon"
        android:fontFamily="Aparajita"
        android:inputType="textPassword"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:singleLine="true"
        android:text="Password"
        android:textColor="#808080"
        android:textSize="15dp" 
        android:onClick="clear"/>
    
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
    
         <TextView
         android:text="Role"
        android:layout_width="match_parent" 
        android:layout_height="30dp"
        android:fontFamily="Aparajita"
        android:textColor="#808080"
        android:layout_gravity="left" />
         
          <RadioGroup
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical">
         <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="Aparajita"
            android:textColor="#808080"
            android:textSize="15dp"
            android:onClick="onRadioButtonClicked"
            android:text="Admin" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="Aparajita"
            android:textColor="#808080"
            android:textSize="15dp"
            android:onClick="onRadioButtonClicked"
            android:text="User" />
         
         
     </RadioGroup>
     
    </LinearLayout>
    
    <Button
        android:id="@+id/tvSignUp"
          android:text="Create Me"
          android:fontFamily="Aparajita"
        android:textColor="#808080"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:background="@drawable/mybutton" />
    
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center">
        
        <TextView
        android:id="@+id/SignIn"
        android:text="Sign In"
        android:layout_width="wrap_content" 
        android:layout_height="20dp" 
        android:fontFamily="Aparajita"
        android:textColor="#808080"
        android:layout_gravity="center"
        android:gravity="left"
        android:layout_weight="1"/>
         
         <TextView
        android:id="@+id/help"
        android:text="Help"
        android:layout_width="wrap_content" 
        android:layout_height="20dp" 
        android:fontFamily="Aparajita"
        android:textColor="#808080"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="right"
        />
        
    </LinearLayout>

  
</LinearLayout>
</ScrollView>
</RelativeLayout>
